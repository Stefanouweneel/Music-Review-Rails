<h1>Add new review</h1>

<% if @post.errors.any? %>
<ul>
  <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_tag :action => 'create' do %>
  <p><label for = "post_text">Your review</label>:
  <%= text_field 'post', 'text' %></p>
  <p><label for = "post_picture">Picture</label>:
  <%= text_field 'post', 'picture' %></p>
  <%= submit_tag "Create" %>
<% end -%>

<%= link_to 'Back', {:action => 'index'} %>
